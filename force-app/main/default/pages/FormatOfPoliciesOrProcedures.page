            .sangria{padding-left: 0.30cm;}
            ol, ul {list-style-type: none;padding-left: 30px;}            
            /* Primer nivel - Números (1., 2., 3.) */
            ol {list-style-type: none;counter-reset: level1;padding-left: 20px;position: relative;}
            /* Primer nivel - Números (1., 2., 3.) */
            ol > li {counter-increment: level1;position: relative;margin-bottom: 5px;}
            ol > li:before {content: counter(level1) ". ";position: absolute;left: -25px;}
            /* Segundo nivel - Letras minúsculas (a., b., c.) */
            ol ol {counter-reset: level2;margin-left: 15px;}
            ol ol > li {counter-increment: level2;}
            ol ol > li:before {content: counter(level2, lower-alpha) ". ";position: absolute;left: -25px;font-weight: normal;}
            /* Tercer nivel - Números romanos (i., ii., iii.) */
            ol ol ol {counter-reset: level3;margin-left: 15px;}
            ol ol ol > li {counter-increment: level3;}
            ol ol ol > li:before {content: "• ";position: absolute;left: -25px;}
            /*Cuarto nivel - Palomitas (✓) */
